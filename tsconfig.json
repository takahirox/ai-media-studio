{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "ESNext",
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es6",
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "./src/service-worker.ts",
  ]
}